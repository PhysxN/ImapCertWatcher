<Window x:Class="ImapCertWatcher.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImapCertWatcher Server"
        Width="420"
        Height="260"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusText"
                   Text="Сервер запущен"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <RichTextBox x:Name="LogBox"
             Grid.Row="1"
             IsReadOnly="True"
             VerticalScrollBarVisibility="Auto"
             IsDocumentEnabled="False"
             BorderThickness="1"
             Padding="4" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button x:Name="CheckAllButton"
                    Content="Проверить всё"
                    Width="140"
                    Margin="0,0,8,0"
                    Click="CheckAll_Click"/>    
            <Button x:Name="CheckNowButton"
                    Content="Проверить сейчас"
                    Width="140"
                    Margin="0,0,8,0"
                    Click="CheckNow_Click"/>
            <Button Content="Закрыть"
                    Width="90"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
