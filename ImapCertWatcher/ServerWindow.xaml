<Window x:Class="ImapCertWatcher.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImapCertWatcher Server"
        Width="440"
        Height="300"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="Auto"/>
            <!-- Прогресс -->
            <RowDefinition Height="*"/>
            <!-- Лог -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       Text="Сервер запущен"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="⚙ Настройки"
                    Width="110"
                    Margin="8,0,0,0"
                    Click="Settings_Click"/>
        </Grid>

        <!-- Прогресс-бар -->
        <ProgressBar x:Name="Progress"
                     Grid.Row="1"
                     Height="6"
                     Margin="0,0,0,6"
                     IsIndeterminate="True"
                     Visibility="Collapsed"/>

        <!-- Лог -->
        <RichTextBox x:Name="LogBox"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="1"
                     Padding="6"/>

        <!-- Нижние кнопки -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">

            <Button x:Name="CheckAllButton"
                    Content="Проверить всё"
                    Width="140"
                    Margin="0,0,8,0"
                    Click="CheckAll_Click"/>

            <Button x:Name="CheckNowButton"
                    Content="Проверить сейчас"
                    Width="140"
                    Margin="0,0,8,0"
                    Click="CheckNow_Click"/>

            <Button Content="Закрыть"
                    Width="90"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
