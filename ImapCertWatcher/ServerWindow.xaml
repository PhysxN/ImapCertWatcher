<Window x:Class="ImapCertWatcher.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImapCertWatcher Server"
        Width="520"
        Height="300"
        MinWidth="500"
        MinHeight="300"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="Auto"/>
            <!-- Прогресс -->
            <RowDefinition Height="*"/>
            <!-- Лог -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       Text="Сервер запущен"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    x:Name="SettingsButton"
                    Content="⚙ Настройки"
                    Width="110"
                    Margin="8,0,0,0"
                    Click="Settings_Click"/>
        </Grid>

        <!-- Прогресс-бар -->
        <ProgressBar x:Name="Progress"
                     Grid.Row="1"
                     Height="6"
                     Margin="0,0,0,6"
                     IsIndeterminate="True"
                     Visibility="Collapsed"/>

        <!-- Лог -->
        <RichTextBox x:Name="LogBox"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="1"
                     Padding="6"/>

        <!-- Нижние кнопки -->
        <Grid Grid.Row="3"
      Margin="0,8,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
            x:Name="CheckAllButton"
            Content="Проверить всё"
            Margin="4"
            MinHeight="32"       
            Click="CheckAll_Click"
            ToolTip="Полная проверка всех писем в IMAP папках"/>

            <Button Grid.Column="1"
            x:Name="CheckNowButton"
            Content="Проверить сейчас"
            Margin="4"
            MinHeight="32"
            FontWeight="Bold"
            Click="CheckNow_Click"
            ToolTip="Быстрая проверка новых писем"/>

            <Button Grid.Column="1"
            x:Name="CancelButton"
            Content="Отмена"
            Margin="4"
            MinHeight="32"
            FontWeight="Bold"
            Visibility="Collapsed"
            Click="Cancel_Click"/>

            <Button Grid.Column="2"
            x:Name="RestartButton"        
            Content="Перезапуск"
            Margin="4"
            MinHeight="32"
            Background="#FFF5C2C2"
            Click="Restart_Click"
            ToolTip="Перезапуск сервера с перечитыванием settings.txt"/>
            
            <Button Grid.Column="3"
            Content="Закрыть"
            Margin="4"
                    MinHeight="32"
            Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>
