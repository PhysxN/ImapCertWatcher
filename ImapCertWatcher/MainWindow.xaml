<Window x:Class="ImapCertWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImapCertWatcher"
        Title="Watcher ЭЦП" Height="880" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <!-- Цвета для светлой темы -->
        <SolidColorBrush x:Key="LightWindowBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="LightControlBackground" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#FF000000"/>
        <SolidColorBrush x:Key="LightBorderColor" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="LightAccentColor" Color="#FF0078D7"/>
        <SolidColorBrush x:Key="LightHoverColor" Color="#FFE1E1E1"/>

        <!-- Цвета для темной темы -->
        <SolidColorBrush x:Key="DarkWindowBackground" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="DarkControlBackground" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="DarkTextColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="DarkBorderColor" Color="#FF555555"/>
        <SolidColorBrush x:Key="DarkAccentColor" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="DarkHoverColor" Color="#FF3E3E42"/>

        <!-- Основные кисти -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="TextColorBrush" Color="#FF000000"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="AccentColorBrush" Color="#FF0078D7"/>
        <SolidColorBrush x:Key="HoverColorBrush" Color="#FFE1E1E1"/>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Стили для элементов управления -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverColorBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>

        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="FontSize" Value="11"/>

            <!-- Стили для ячеек -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" 
                                                  Margin="4,2"
                                                  TextElement.Foreground="{DynamicResource TextColorBrush}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Стили для заголовков -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стиль для ComboBox внутри DataGrid -->
        <Style x:Key="DataGridComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для TextBox внутри DataGrid -->
        <Style x:Key="DataGridTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverColorBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverColorBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="4,4,0,0"
                            Margin="2,2,2,0">
                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Только один триггер - для выделенной вкладки -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для ContextMenu -->
        <Style x:Key="ModernContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для TextBlock в DataGrid -->
        <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,0"/>
        </Style>

        <Style x:Key="DataGridCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>

    </Window.Resources>

    <Grid Margin="8" Background="{DynamicResource WindowBackgroundBrush}">
        <TabControl Style="{StaticResource ModernTabControlStyle}" SelectionChanged="TabControl_SelectionChanged">

            <!-- Вкладка с сертификатами -->
            <TabItem Header="Сертификаты" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <!-- Мини-лог теперь ПОД таблицей -->
                        <RowDefinition Height="Auto"/>
                        <!-- Прогресс-бар -->
                        <RowDefinition Height="Auto"/>
                        <!-- Статус бар теперь НАД мини-логом -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                        <Button x:Name="btnManualCheck" Content="Проверить сейчас" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnManualCheck_Click"/>
                        <Button x:Name="btnProcessAll" Content="Обработать все письма" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnProcessAll_Click"/>
                        <Button x:Name="btnExportExcel" Content="Экспорт в Excel" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnExportExcel_Click"/>
                        <TextBlock Text="Интервал (часы):" VerticalAlignment="Center" Margin="8,0,4,0"
                       Foreground="{DynamicResource TextColorBrush}"/>
                        <TextBlock x:Name="txtInterval" VerticalAlignment="Center" Margin="0,0,16,0"
                       Foreground="{DynamicResource TextColorBrush}"/>

                        <Button x:Name="btnDeleteSelected" Content="Пометить на удаление" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnDeleteSelected_Click"/>
                        <Button x:Name="btnRestoreSelected" Content="Восстановить" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnRestoreSelected_Click"/>
                    </StackPanel>

                    <!-- Поиск по ФИО -->
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock Text="Поиск по ФИО:" VerticalAlignment="Center" Margin="0,0,8,0"
                       Foreground="{DynamicResource TextColorBrush}"/>
                        <TextBox x:Name="txtSearchFio" Width="300" 
                     Style="{StaticResource ModernTextBoxStyle}"
                     TextChanged="TxtSearchFio_TextChanged"
                     VerticalAlignment="Center"
                     ToolTip="Введите ФИО для поиска"/>
                        <Button x:Name="btnClearSearch" Content="Очистить" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnClearSearch_Click"
                    ToolTip="Очистить поиск"/>
                    </StackPanel>

                    <!-- Фильтры -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
                        <TextBlock Text="Фильтр по зданию:" VerticalAlignment="Center" Margin="0,0,8,0"
                       Foreground="{DynamicResource TextColorBrush}"/>
                        <RadioButton x:Name="rbAllBuildings" Content="Все" GroupName="BuildingFilter" 
                         Style="{StaticResource ModernRadioButtonStyle}" 
                         IsChecked="True" Checked="BuildingFilter_Checked"/>
                        <RadioButton x:Name="rbKrasnoflotskaya" Content="Краснофлотская" GroupName="BuildingFilter" 
                         Style="{StaticResource ModernRadioButtonStyle}" 
                         Checked="BuildingFilter_Checked"/>
                        <RadioButton x:Name="rbPionerskaya" Content="Пионерская" GroupName="BuildingFilter" 
                         Style="{StaticResource ModernRadioButtonStyle}" 
                         Checked="BuildingFilter_Checked"/>

                        <CheckBox x:Name="chkShowDeleted" Content="Показывать удаленные" 
                      Style="{StaticResource ModernCheckBoxStyle}" 
                      Checked="ChkShowDeleted_Changed" Unchecked="ChkShowDeleted_Changed"/>
                    </StackPanel>

                    <!-- Таблица сертификатов -->
                    <DataGrid x:Name="dgCerts" Grid.Row="3" 
                  Style="{StaticResource ModernDataGridStyle}"
                  IsReadOnly="False" SelectionMode="Single"
                  CanUserSortColumns="True" CanUserResizeColumns="True"
                  LoadingRow="DgCerts_LoadingRow"
                  ContextMenuOpening="DgCerts_ContextMenuOpening"
                  CellEditEnding="DgCerts_CellEditEnding"
                  BeginningEdit="DgCerts_BeginningEdit"
                  PreparingCellForEdit="DgCerts_PreparingCellForEdit"
                  Loaded="DgCerts_Loaded">
                        <DataGrid.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenuStyle}">
                                <MenuItem Header="Добавить архив с подписью" Click="AddArchiveMenuItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Экспорт выделенного" Click="ExportSelectedMenuItem_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Fio}" Width="2*"
                                    ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Сертификат" Binding="{Binding CertNumber}" Width="*"
                                    ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Начало" Binding="{Binding DateStart, StringFormat=dd.MM.yyyy}" Width="*"
                                    ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Окончание" Binding="{Binding DateEnd, StringFormat=dd.MM.yyyy}" Width="*"
                                    ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Осталось дней" Binding="{Binding DaysLeft}" Width="*"
                                    ElementStyle="{StaticResource DataGridTextBlockStyle}"/>

                            <DataGridTemplateColumn Header="Архив с ЭЦП" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Открыть" 
                                    Click="BtnOpenArchive_Click" 
                                    Padding="4,2"
                                    ToolTip="Распаковать и открыть архив">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ArchivePath}" Value="{x:Null}">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Content" Value="Нет архива"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ArchivePath}" Value="">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Content" Value="Нет архива"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Столбец для здания -->
                            <DataGridTemplateColumn Header="Здание" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Building}" 
                                       Style="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox x:Name="cmbBuildingEdit"
                                      SelectedItem="{Binding Building, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="."
                                      LostFocus="BuildingComboBox_LostFocus"
                                      DropDownOpened="BuildingComboBox_DropDownOpened"
                                      SelectionChanged="BuildingComboBox_SelectionChanged"
                                      Style="{StaticResource DataGridComboBoxStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Примечание" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}" 
                                     LostFocus="NoteTextBox_LostFocus"
                                     Style="{StaticResource DataGridTextBoxStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridCheckBoxColumn Header="Удален" Binding="{Binding IsDeleted}" Width="*" IsReadOnly="True"
                                        ElementStyle="{StaticResource DataGridCheckBoxStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Статус бар теперь над мини-логом -->
                    <StatusBar Grid.Row="4" Margin="0,8,0,4" Background="{DynamicResource ControlBackgroundBrush}">
                        <StatusBarItem>
                            <TextBlock x:Name="statusText" Foreground="{DynamicResource TextColorBrush}">Готов</TextBlock>
                        </StatusBarItem>
                        <StatusBarItem>
                            <TextBlock x:Name="searchStatusText" Margin="20,0,0,0" 
                           Foreground="{DynamicResource TextColorBrush}"/>
                        </StatusBarItem>
                        <StatusBarItem>
                            <ProgressBar x:Name="exportProgress" Width="100" Height="16" Margin="20,0,0,0"
                           Visibility="Collapsed"/>
                        </StatusBarItem>
                    </StatusBar>

                    <!-- Мини-лог теперь в самом низу -->
                    <Border Grid.Row="5" Margin="0,4,0,4" BorderBrush="{DynamicResource BorderColorBrush}" BorderThickness="1"
                Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="4">
                        <TextBlock x:Name="txtMiniLog" 
                       Margin="4,2"
                       FontSize="10" 
                       FontFamily="Consolas"
                       Foreground="{DynamicResource TextColorBrush}"
                       TextWrapping="NoWrap"
                       ToolTip="Последние действия"
                       Text="Мини-лог готов"/>
                    </Border>

                    <!-- Прогресс-бар проверки почты -->
                    <ProgressBar x:Name="progressMailCheck" Grid.Row="6" 
                     Height="6" Margin="0,4,0,2"
                     Visibility="Collapsed"
                     IsIndeterminate="True"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource AccentColorBrush}"/>
                </Grid>
            </TabItem>

            <!-- Настройки -->
            <TabItem Header="Настройки" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Мини-лог -->
                        <RowDefinition Height="Auto"/>
                        <!-- Прогресс-бар -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Основное содержимое настроек -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая колонка - Настройки почты -->
                            <StackPanel Grid.Column="0">
                                <!-- Почтовый сервер -->
                                <GroupBox Header="Почтовый сервер" Style="{StaticResource ModernGroupBoxStyle}">
                                    <StackPanel Margin="6">
                                        <TextBlock Text="Хост IMAP:" Margin="0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtMailHost" Text="{Binding MailHost}" Style="{StaticResource ModernTextBoxStyle}" Height="26"/>

                                        <TextBlock Text="Порт:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtMailPort" Text="{Binding MailPort}" Style="{StaticResource ModernTextBoxStyle}" Height="26"/>

                                        <CheckBox x:Name="chkMailUseSsl" Content="Использовать SSL" 
                                      Style="{StaticResource ModernCheckBoxStyle}" 
                                      IsChecked="{Binding MailUseSsl}"
                                      Margin="0,8,0,0"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Учетные данные почты -->
                                <GroupBox Header="Учетные данные почты" Style="{StaticResource ModernGroupBoxStyle}" Margin="0,12,0,0">
                                    <StackPanel Margin="6">
                                        <TextBlock Text="Логин:" Margin="0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtMailLogin" Text="{Binding MailLogin}" Style="{StaticResource ModernTextBoxStyle}" Height="26"/>

                                        <TextBlock Text="Пароль:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <PasswordBox x:Name="pwdMailPassword" 
                                         Height="26"
                                         Margin="0,2,0,8" 
                                         Padding="6,4" 
                                         Style="{StaticResource ModernPasswordBoxStyle}"/>

                                        <TextBlock Text="Папка IMAP:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="cmbImapFolder" 
                                          Grid.Column="0"
                                          Text="{Binding ImapFolder}"
                                          IsEditable="True"
                                          Margin="0,2,6,8" 
                                          Height="26"
                                          VerticalAlignment="Top"
                                          ToolTip="Выберите папку из списка или введите вручную"/>
                                            <Button x:Name="btnRefreshFolders" 
                                        Grid.Column="1"
                                        Content="Обновить" 
                                        Style="{StaticResource ModernButtonStyle}" 
                                        Click="BtnRefreshFolders_Click" 
                                        Width="90" Height="26" 
                                        Margin="0,2,0,8"
                                        VerticalAlignment="Top"
                                        Padding="6,2"
                                        FontSize="11"
                                        ToolTip="Обновить список папок"/>
                                        </Grid>
                                        <TextBlock x:Name="txtFoldersStatus" 
                                       FontStyle="Italic" FontSize="10" 
                                       Foreground="{DynamicResource TextColorBrush}"
                                       Margin="0,0,0,4"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Фильтрация писем -->
                                

                                <!-- Кнопки управления почтой -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                    <Button x:Name="btnSaveMailSettings" Content="Сохранить почту" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Click="BtnSaveMailSettings_Click"
                                Width="120" Height="30"/>
                                    <Button x:Name="btnTestMailConnection" Content="Тест почты" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Click="BtnTestMailConnection_Click"
                                Width="100" Height="30" Margin="8,0,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Разделитель -->
                            <Rectangle Grid.Column="1" Fill="{DynamicResource BorderColorBrush}" Width="1" VerticalAlignment="Stretch" Margin="0,20"/>

                            <!-- Правая колонка - Настройки БД и приложения -->
                            <StackPanel Grid.Column="2">
                                <!-- База данных -->
                                <GroupBox Header="База данных Firebird" Style="{StaticResource ModernGroupBoxStyle}">
                                    <StackPanel Margin="6">
                                        <TextBlock Text="Путь к файлу БД:" Margin="0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="txtFirebirdDbPath" Text="{Binding FirebirdDbPath}" 
                                         Style="{StaticResource ModernTextBoxStyle}" Width="280" Height="26"/>
                                            <Button x:Name="btnBrowseDbPath" Content="..." 
                                        Style="{StaticResource ModernButtonStyle}" 
                                        Click="BtnBrowseDbPath_Click" 
                                        Width="40" Height="26" Margin="6,0,0,0" ToolTip="Выбрать файл БД"/>
                                        </StackPanel>

                                        <TextBlock Text="Сервер:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtFbServer" Text="{Binding FbServer}" Style="{StaticResource ModernTextBoxStyle}" Height="26"/>

                                        <TextBlock Text="Пользователь:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtFbUser" Text="{Binding FbUser}" Style="{StaticResource ModernTextBoxStyle}" Height="26"/>

                                        <TextBlock Text="Пароль:" Margin="0,8,0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <PasswordBox x:Name="pwdFbPassword" 
                                         Height="26"
                                         Margin="0,2,0,8" 
                                         Padding="6,4" 
                                         Style="{StaticResource ModernPasswordBoxStyle}"/>

                                        <!-- Диалект с подсказкой -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="Диалект:" Margin="0,2" Foreground="{DynamicResource TextColorBrush}" VerticalAlignment="Center"/>
                                            <Button x:Name="btnDialectHelp" 
                                        Content="?" 
                                        Style="{StaticResource ModernButtonStyle}" 
                                        Width="20" Height="20" 
                                        Margin="6,0,0,0"
                                        Padding="0"
                                        FontWeight="Bold"
                                        ToolTip="Нажмите для справки о диалектах"
                                        Click="BtnDialectHelp_Click"/>
                                        </StackPanel>
                                        <TextBox x:Name="txtFbDialect" Text="{Binding FbDialect}" Style="{StaticResource ModernTextBoxStyle}" Height="26"
                                     ToolTip="3 - современный SQL (рекомендуется)&#10;1 - устаревший синтаксис"/>
                                        <TextBlock Text="Рекомендуется: 3 (современный SQL)" 
                                       FontStyle="Italic" FontSize="10" 
                                       Foreground="{DynamicResource TextColorBrush}"
                                       Margin="0,4,0,0"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Поведение приложения -->
                                <GroupBox Header="Поведение приложения" Style="{StaticResource ModernGroupBoxStyle}" Margin="0,12,0,0">
                                    <StackPanel Margin="6">
                                        <TextBlock Text="Интервал проверки (часы):" Margin="0,2" Foreground="{DynamicResource TextColorBrush}"/>
                                        <TextBox x:Name="txtCheckInterval" Text="{Binding CheckIntervalHours}" 
                            Style="{StaticResource ModernTextBoxStyle}" Height="26"/>
                                        <TextBlock Text="Рекомендуется: 1-24 часа" 
                            FontStyle="Italic" FontSize="10" 
                            Foreground="{DynamicResource TextColorBrush}"
                            Margin="0,4,0,8"/>

                                        <CheckBox x:Name="chkDarkTheme" Content="Темная тема" 
                            Style="{StaticResource ModernCheckBoxStyle}"
                            Checked="ChkDarkTheme_Changed" Unchecked="ChkDarkTheme_Changed"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Кнопки управления БД -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                    <Button x:Name="btnSaveDbSettings" Content="Сохранить БД" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Click="BtnSaveDbSettings_Click"
                                Width="120" Height="30"/>
                                    <Button x:Name="btnTestDbConnection" Content="Тест БД" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Click="BtnTestDbConnection_Click"
                                Width="100" Height="30" Margin="8,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <!-- Мини-лог на вкладке настроек -->
                    <Border Grid.Row="2" Margin="0,12,0,4" BorderBrush="{DynamicResource BorderColorBrush}" BorderThickness="1"
                Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="4">
                        <TextBlock x:Name="txtMiniLogSettings" 
                       Margin="4,2"
                       FontSize="10" 
                       FontFamily="Consolas"
                       Foreground="{DynamicResource TextColorBrush}"
                       TextWrapping="NoWrap"
                       ToolTip="Последние действия"
                       Text="Мини-лог готов"/>
                    </Border>

                    <!-- Прогресс-бар на вкладке настроек -->
                    <ProgressBar x:Name="progressMailCheckSettings" Grid.Row="3" 
                     Height="6" Margin="0,4,0,2"
                     Visibility="Collapsed"
                     IsIndeterminate="True"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource AccentColorBrush}"/>
                </Grid>
            </TabItem>

            <!-- Логи -->
            <TabItem Header="Логи" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Прогресс-бар -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                        <Button x:Name="btnRefreshLogs" Content="Обновить логи" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnRefreshLogs_Click"/>
                        <Button x:Name="btnClearLogs" Content="Очистить старые логи" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnClearLogs_Click"/>
                        <Button x:Name="btnOpenLogFolder" Content="Открыть папку логов" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnOpenLogFolder_Click"/>
                    </StackPanel>

                    <TextBox x:Name="txtLogs" Grid.Row="1" 
                     Style="{StaticResource ModernTextBoxStyle}"
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="10"
                     TextWrapping="Wrap"/>

                    <StatusBar Grid.Row="2" Margin="0,8,0,0" Background="{DynamicResource ControlBackgroundBrush}">
                        <StatusBarItem>
                            <TextBlock x:Name="logStatusText" Foreground="{DynamicResource TextColorBrush}">Логи загружены</TextBlock>
                        </StatusBarItem>
                    </StatusBar>

                    <!-- Прогресс-бар на вкладке логов -->
                    <ProgressBar x:Name="progressMailCheckLogs" Grid.Row="3" 
                     Height="6" Margin="0,4,0,2"
                     Visibility="Collapsed"
                     IsIndeterminate="True"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource AccentColorBrush}"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>